@article{RamaekersAcuteeffects4methylenedioxymethamphetamine2006,
  title = {Acute Effects of 3,4-Methylenedioxymethamphetamine ({{MDMA}}) on Behavioral Measures of Impulsivity: Alone and in Combination with Alcohol.},
