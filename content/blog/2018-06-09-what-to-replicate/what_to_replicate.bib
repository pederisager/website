  number = {21},
  journal = {J Neurosci},
  author = {Liang, Xia and He, Yong and Salmeron, Betty Jo and Gu, Hong and Stein, Elliot A and Yang, Y},
  year = {2015},
  keywords = {brain circuits,cocaine addiction,modularity analysis,network interactions,resting fMRI},
  pages = {8081--8090},
  annote = {NULL}
}

