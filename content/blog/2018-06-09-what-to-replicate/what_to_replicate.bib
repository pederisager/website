@article{MurphyUsingMRImeasure2011,
  title = {Using {{MRI}} to Measure Drug Action: Caveats and New Directions},
  volume = {25},
  issn = {1461-7285 (Electronic) 0269-8811 (Linking)},
  doi = {10.1177/0269881110372547},
  abstract = {Investigating pharmacological modulation of brain activity using magnetic resonance imaging (MRI) presents an exciting opportunity to bridge the gap between preclinical and clinical studies, and holds the potential to be a useful tool in the discovery and development of novel therapeutic agents. Most functional MRI studies to date have utilized the blood oxygen level dependent (BOLD) contrast mechanism. Although this has some advantages over other techniques and is widely available, BOLD has two significant limitations for the study of drug effects; it is an indirect measurement of neuronal function, and produces only a relative (non-quantitative) measure of blood dynamics. Here we describe the various experimental manipulations that have been used to reduce the impact of these limitations, and discuss new ways of collecting and analysing imaging data that allow us to assess functional connectivity of the brain. We recommend some complementary techniques (such as arterial spin labelling and magnetoencephalography) that, if used in conjunction with BOLD functional MRI, will increase the interpretability and thus the utility of MRI for pharmacology research.},
  journal = {Journal of Psychopharmacology},
  author = {Murphy, S. E. and Mackay, C. E.},
  year = {2011},
  keywords = {neuroimaging,arterial spin labelling,functional connectivity,magnetoencephalography,pharmacological mri,resting state networks},
  pages = {1168--1174},
  annote = {Review points to two weaknesses of BOLD in phMRI: \\
- It is an indirect measure of neuronal actiivty\\
- It is a relative measure of signal change, and so not really a quantitative measure.

Suggested remedies to caveats mentioned here include: Functional connectivity analyses, ASL, MEG, using healthy volunteers, and subjective measures.}
}

@article{JenkinsPharmacologicmagneticresonance2012,
  title = {Pharmacologic Magnetic Resonance Imaging ({{phMRI}}): {{Imaging}} Drug Action in the Brain},
