  journal = {The New England journal of medicine},
  author = {Wager, Tor D and Atlas, Lauren Y and a Lindquist, Martin and Roy, Mathieu and Woo, Choong-Wan and Kross, Ethan},
  year = {2013},
  keywords = {Female,Male,Humans,Adult,Brain Mapping,Brain Mapping: methods,Young Adult,Brain,Magnetic Resonance Imaging,Analgesics; Opioid,Analgesics; Opioid: pharmacology,Pain Measurement,Pain Measurement: methods,Piperidines,Piperidines: pharmacology,Analgesics; Opioid: therapeutic use,Artificial Intelligence,Brain: physiopathology,Hot Temperature,Hot Temperature: adverse effects,Pain,Pain: etiology,Pain: physiopathology,Pain: psychology,Piperidines: therapeutic use,ROC Curve,Sensitivity and Specificity},
