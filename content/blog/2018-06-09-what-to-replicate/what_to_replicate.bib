  journal = {American journal of medical genetics. Part B, Neuropsychiatric genetics : the official publication of the International Society of Psychiatric Genetics},
  author = {Smith, Rachel J and a Doyle, Glenn and Han, Angela M and Crowley, James J and Oslin, David W and a Patkar, Ashwin and Mannelli, Paolo and a Demaria, Peter and O'brien, Charles P and Berrettini, Wade H},
