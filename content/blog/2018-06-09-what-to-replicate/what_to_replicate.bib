  journal = {Psychopharmacology},
  author = {Trezza, Viviana and Baarendse, Petra J J and Vanderschuren, Louk J M J},
  year = {2014},
  keywords = {Reward,Drug addiction,Adolescence,Antisocial personality disorder,Risk factors,Social behavior},
