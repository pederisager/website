  keywords = {Female,Male,Humans,Young Adult,Adolescent,Severity of Illness Index,Hydrocortisone,Behavior; Addictive,Behavior; Addictive: psychology,Smoking,Smoking: psychology,Hydrocortisone: blood,Hypothalamo-Hypophyseal System,Hypothalamo-Hypophyseal System: metabolism,Pituitary-Adrenal System,Pituitary-Adrenal System: metabolism,Questionnaires,Speech,Stress; Psychological,Stress; Psychological: metabolism,Tobacco Use Disorder,Tobacco Use Disorder: psychology},
