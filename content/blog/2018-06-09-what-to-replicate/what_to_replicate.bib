  journal = {Biological Psychiatry},
  author = {Gorelick, David A. and Kim, Yu Kyeong and Bencherif, Badreddine and Boyd, Susan J. and Nelson, Richard and Copersino, Marc and Endres, Christopher J. and Dannals, Robert F. and Frost, J. James},
