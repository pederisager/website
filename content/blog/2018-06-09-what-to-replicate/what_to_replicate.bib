  journal = {Neuropsychopharmacology : official publication of the American College of Neuropsychopharmacology},
  author = {Fan, Yan and Pestke, Karin and Feeser, Melanie and Aust, Sabine and Pruessner, Jens C and B{\"o}ker, Heinz and Bajbouj, Malek and Grimm, Simone},
