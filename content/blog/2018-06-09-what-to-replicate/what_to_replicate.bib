  journal = {Neuropsychopharmacology},
  author = {Upadhyay, Jaymin and Anderson, Julie and Schwarz, Adam J and Coimbra, Alexandre and Baumgartner, Richard and Pendse, G and George, Edward and Nutile, Lauren and Wallin, Diana and Bishop, James and Neni, Saujanya and Maier, Gary and Iyengar, Smriti and Evelhoch, Jeffery L and Bleakman, David and Hargreaves, Richard and Becerra, Lino and Borsook, David},
