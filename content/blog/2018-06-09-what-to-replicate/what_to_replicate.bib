  journal = {Journal of Diabetes and its Complications},
  author = {Moheet, Amir and Mangia, Silvia and Kumar, Anjali and Tesfaye, Nolawit and Eberly, Lynn E. and Bai, Yun and Kubisiak, Kristine and Seaquist, Elizabeth R.},
  year = {2015},
  keywords = {Naltrexone,HAAF,Hypoglycemia,Impaired awareness of hypoglycemia,Opioid antagonists,Type 1 diabetes},
  pages = {1277--1282},
