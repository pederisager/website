@article{VulPuzzlinglyHighCorrelations2009,
  title = {Puzzlingly {{High Correlations}} in {{fMRI Studies}} of {{Emotion}}, {{Personality}}, and {{Social Cognition}}},
  volume = {4},
  issn = {1745-6916},
  doi = {10.1111/j.1745-6924.2009.01132.x},
  abstract = {ABSTRACT\textemdash{}Functional magnetic resonance imaging (fMRI)$\backslash$nstudies of emotion, personality, and social cognition have$\backslash$ndrawn much attention in recent years, with high-profile$\backslash$nstudies frequently reporting extremely high (e.g., $>$.8) correlations$\backslash$nbetween brain activation and personalitymeasures.$\backslash$nWe show that these correlations are higher than should be$\backslash$nexpected given the (evidently limited) reliability of both fMRI$\backslash$nand personality measures. The high correlations are all the$\backslash$nmore puzzling because method sections rarely contain much$\backslash$ndetail about howthe correlationswere obtained.We surveyed$\backslash$nauthors of 55 articles that reported findings of this kind to$\backslash$ndetermine a few details on how these correlations were$\backslash$ncomputed. More than half acknowledged using a strategy$\backslash$nthat computes separate correlations for individual voxels and$\backslash$nreports means of only those voxels exceeding chosen thresholds.$\backslash$nWe show how this nonindependent analysis inflates$\backslash$ncorrelations while yielding reassuring-looking scattergrams.$\backslash$nThis analysis technique was used to obtain the vast majority$\backslash$nof the implausibly high correlations in our survey sample. In$\backslash$naddition, we argue that, in some cases, other analysis problems$\backslash$nlikely created entirely spurious correlations. We outline$\backslash$nhow the data from these studies could be reanalyzed$\backslash$nwith unbiased methods to provide accurate estimates of the$\backslash$ncorrelations in question and urge authors to perform such$\backslash$nreanalyses. The underlying problems described here appear$\backslash$nto be common in fMRI research of many kinds\textemdash{}not just in$\backslash$nstudies of emotion, personality, and social cognition.},
  number = {3},
  journal = {Psychological Science},
  author = {Vul, Edward and Harris, Christine and Winkielman, Piotr and Pashler, Harold},
  year = {2009},
  pages = {274--290}
}

@article{CambridgeNeuralbehavioraleffects2013,
  title = {Neural and Behavioral Effects of a Novel {{Mu}} Opioid Receptor Antagonist in Binge-Eating Obese People},
  volume = {73},
  issn = {1873-2402 (Electronic)$\backslash$r0006-3223 (Linking)},
  doi = {10.1016/j.biopsych.2012.10.022},
  abstract = {Background: Binge eating is associated with obesity and has been conceptualized as food addiction. However, this view has received only inconsistent support in humans, and limited evidence relates key neurocircuitry to the disorder. Moreover, relatively few studies have used pharmacologic functional magnetic resonance imaging to probe the underlying basis of altered eating behaviors. Methods: In a double-blind, placebo-controlled, parallel group study, we explored the effects of a potent mu-opioid receptor antagonist, GSK1521498, in obese individuals with moderate binge eating. Subjects were tested during a baseline placebo run-in period and retested after 28-days of drug (n = 21) or placebo (n = 21) treatment. Using functional magnetic resonance imaging and behavioral measures, we determined the drug's effects on brain responses to food images and, separately, on motivation to expend energy to view comparable images. Results: Compared with placebo, GSK1521498 was associated with a significant reduction in pallidum/putamen responses to pictures of high-calorie food and a reduction in motivation to view images of high-calorie food. Intriguingly, although motivational responding was reduced, subjective liking for the same images actually increased following drug treatment. Conclusions: Stimulus-specific putamen/pallidal responses in obese people with binge eating are sensitive to altered mu-opioid function. This neuromodulation was accompanied by reductions in motivational responding, as measured by grip force, although subjective liking responses to the same stimuli actually increased. As well as providing evidence for a link between the opioid system and food-related behavior in binge-eating obese individuals, these results support a dissociation across measures of motivation and liking associated with food-related stimuli in these individuals. ?? 2013 Society of Biological Psychiatry.},
  number = {9},
  journal = {Biological Psychiatry},
  author = {Cambridge, Victoria C. and Ziauddeen, Hisham and Nathan, Pradeep J. and Subramaniam, Naresh and Dodds, Chris and Chamberlain, Samuel R. and Koch, Annelize and Maltby, Kay and Skeggs, Andrew L. and Napolitano, Antonella and Farooqi, I. Sadaf and Bullmore, Edward T. and Fletcher, Paul C.},
  year = {2013},
  keywords = {fMRI,motivation,opioid,Binge eating,hedonics,obesity},
  pages = {887--894},
  annote = {NULL}
}

