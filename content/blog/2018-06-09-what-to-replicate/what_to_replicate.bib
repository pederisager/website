@article{YoungOxytocinreversesamphetamineinduced2014,
  title = {Oxytocin Reverses Amphetamine-Induced Deficits in Social Bonding: Evidence for an Interaction with Nucleus Accumbens Dopamine},
  volume = {34},
  issn = {1529-2401 (Electronic)$\backslash$r0270-6474 (Linking)},
  doi = {10.1523/JNEUROSCI.4275-13.2014},
  abstract = {Drug addiction has devastating consequences on social behaviors and can lead to the impairment of social bonding. Accumulating evidence indicates that alterations in oxytocin (OT) and dopamine (DA) neurotransmission within brain reward circuitry may be involved. We investigated this possibility, as well as the therapeutic potential of OT for drug-induced social deficits, using the prairie vole (Microtus ochrogaster)-a socially monogamous rodent that forms enduring pair bonds between adult mates. We demonstrate that repeated exposure to the commonly abused psychostimulant amphetamine (AMPH) inhibits the formation of partner preferences (an index of pair bonding) in female prairie voles. AMPH exposure also altered OT and DA neurotransmission in regions that mediate partner preference formation: it decreased OT and DA D2 receptor immunoreactivity in the medial prefrontal cortex (mPFC) and nucleus accumbens (NAcc), respectively, and increased NAcc DA levels. Administration of OT directly into the mPFC of AMPH-exposed voles restored partner preferences, and altered NAcc DA levels, and this effect was dependent on OT receptor activation. Together, these data suggest that repeated AMPH exposure impairs pair bonding through an OT-mediated mechanism, and that OT and DA systems within brain reward circuitry may interact to mediate the complex relationship between drug abuse and social bonding. Further, these results provide empirical support for the idea that the central OT system may represent an important target for the treatment of social deficits in addiction.},
  number = {25},
  journal = {J Neurosci},
  author = {Young, K A and Liu, Y and Gobrogge, K L and Wang, H and Wang, Z},
  year = {2014},
  keywords = {addiction,amphetamine,dopamine,oxytocin,social bonding},
  pages = {8499--8506}
}

@incollection{RobinsonIncentiveSalienceTransition2013,
  title = {Incentive {{Salience}} and the {{Transition}} to {{Addiction}}},
  isbn = {978-0-12-398335-0},
  abstract = {Abstract Incentive salience (``wanting'') normally provides an ``oomph'' that draws our attention toward objects of desire and spurs us to work to obtain them. But when amplified excessively by drug-induced sensitization of dopamine-related brain systems, ``wanting'' can have pathological intensity, leading to the kind of compulsive ``wanting'' associated with addiction. A stimulus attributed with incentive salience becomes hard to avoid and ignore, and more than simply attracts attention: it may draw the whole body toward it and trigger an urge to consume any related reward. This incentive effect is further heightened by drug-induced sensitization of its underlying neural systems, making drugs and their cues powerful triggers of craving and relapse. The incentive sensitization theory provides an explanation for the compulsive use of drugs that contributes to the transition to, and maintenance of, addiction. This theory also provides an important complement to positive and negative reinforcement views of addiction.},
  booktitle = {Biological {{Research}} on {{Addiction}}},
  author = {Robinson, Mike J F and Robinson, Terry E. and Berridge, Kent C.},
  year = {2013},
  pages = {391--399},
  doi = {10.1016/B978-0-12-398335-0.00039-X},
  annote = {From Siri's proposal:\\
Drug abuse disrupts MOR and DA circuits, leading to exaggerated incentive salience for drug reward and inability to enjoy other rewards (anhedonia)."}
