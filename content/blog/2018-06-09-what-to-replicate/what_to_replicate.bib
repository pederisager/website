  journal = {Science (New York, N.Y.)},
  author = {George, David T and Gilman, Jodi and Hersh, Jacqueline and Thorsell, Annika and Herion, David and Geyer, Christopher and Peng, Xiaomei and Kielbasa, William and Rawlings, Robert and Brandt, John E and Gehlert, Donald R and Tauscher, Johannes T and Hunt, Stephen P and Hommer, Daniel and Heilig, Markus},
